{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python 调试程序: 当前文件",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "ROS2:GDB调试",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/start_program",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerServerAddress": "localhost:3038",
      "preLaunchTask": "RunGDBServer",
      "setupCommands": [
        {
          "description": "Test",
          "text": "python import sys;sys.path.insert(0, '/usr/share/gcc/python');from libstdcxx.v6.printers import register_libstdcxx_printers;register_libstdcxx_printers(None)",
          "ignoreFailures": false
        },
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "ROS2:LLDB调试",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/start_program",
      "args": [],
      "stopOnEntry": false,
      "cwd": "${workspaceFolder}",
      "initCommands": [
        "platform select remote-linux",
        "platform connect connect://127.0.0.1:3039",
        "settings set target.inherit-env false",
        "settings set target.skip-prologue true",
        // "settings set target.inline-breakpoint-strategy always",
        // "set set stop-disassembly-display always",
        // "set set stop-line-count-before 0",
        // "set set stop-line-count-after 0"
      ],
      "preLaunchTask": "RunLLDBDBServer",
      "reverseDebugging": true
    },
    {
      "name": "C++ Debugger",
      "request": "launch",
      "type": "cppdbg",
      "miDebuggerServerAddress": "localhost:3000",
      "cwd": "/",
      "program": "${workspaceFolder}/.vscode/start_program",
    },
    // {
    //   "name": "ros Attach",
    //   "type": "ros2",
    //   "request": "attach",
    // }
  ]
}